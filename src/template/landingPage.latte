<html>
<head>
    <title>{$header}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            font-family: Georgia, serif;
        }
        .panel {
            text-align: center;
            padding: 15px 0;
            background-color: darkblue;
            color: white;
            font-weight: bold;
            margin-bottom: 25px;
        }
        h1 {
            text-align: center;
            margin-top: 0;
            margin-bottom: 25px;
            font-size: 36pt;
        }
        li {
            margin-bottom: 1em;
        }
        .superheader {
            text-align: center;
            font-size: 30pt;
            margin-bottom: 15px;
        }
        .subheader {
            text-align: center;
            font-size: 16pt;
            margin-bottom: 25px;
        }
        .content {
            max-width: 1200px;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        img {
            max-width: 600px;
            width: 50%;
            margin-left: auto;
            margin-right: auto;
            display: block;
        }
        .popup-button {
            margin-top: 25px;
            padding: 25px 0;
            text-align: center;
            background-color: lightblue;
        }
        .popup-button-description {
            font-size: 16pt;
            margin-bottom: 25px;
        }
        .popup-button a, .popup-dialog-frame input[type=submit] {
            display: inline-block;
            padding: 15px 25px;
            background-color: darkblue;
            color: white;
            text-decoration: none;
            border: 0;
        }
        .popup-dialog {
            background-color: rgba(0, 0, 0, .7);
            position: fixed;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
        }
        .popup-dialog-frame {
            margin-left: auto;
            margin-right: auto;
            max-width: 1200px;
            width: 100%;
            background-color: white;
            margin-top: 100px;
            padding: 25px;
            text-align: center;
        }
        .popup-dialog-frame-header {
            font-size: 24pt;
            margin-bottom: 15px;
        }
        .popup-dialog-frame-description {
            margin-bottom: 15px;
        }
        .popup-dialog-frame input[type=email] {
            height: 45px;
            padding: 0 15px;
        }

    </style>
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <!-- Facebook Pixel Code -->
    <script>
        !function(f,b,e,v,n,t,s)
        {l}if(f.fbq)return;n=f.fbq=function(){l}n.callMethod?
            n.callMethod.apply(n,arguments):n.queue.push(arguments)};
        if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
        n.queue=[];t=b.createElement(e);t.async=!0;
        t.src=v;s=b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t,s)}(window, document,'script',
            'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', {$fbPixel});
        fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none"
                   src="https://www.facebook.com/tr?id={$fbPixel}&ev=PageView&noscript=1"
        /></noscript>
    <!-- End Facebook Pixel Code -->
</head>
<body>
<div id="app">
    <div class="popup-dialog" v-if="popup" @click="hidePopup">
        <div class="popup-dialog-frame" @click.stop="">
            <div class="popup-dialog-frame-header">{$PopupHeader}</div>
            <div class="popup-dialog-frame-description">{$PopupContent}</div>
            <form action="index.php?side=email" method="post">
                <label>Váš e-mail: <input type="email" name="email" /></label>
                <input type="submit" value="{$PopupLabel}" />
            </form>
        </div>
    </div>
    <div class="panel">{$Panel}</div>
    <div class="superheader">{$SuperHeader}</div>
    <h1>{$Header}</h1>
    <div class="subheader">{$SubHeader}</div>
    {$Content|noescape}
    <div class="popup-button">
        <div class="popup-button-description">{$PopupHeader}</div>
        <a href="#" @click.prevent="showPopup">{$PopupLabel}</a>
    </div>
</div>
</body>
<script>
    new Vue({
        el: "#app",
        data: {
            popup: false
        },
        methods: {
            showPopup: function() {
                this.popup = true;
            },
            hidePopup: function() {
                this.popup = false;
            }
        }
    })
</script>
</html>